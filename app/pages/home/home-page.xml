<Page class="page"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Home"></Label>
    </ActionBar>
    <GridLayout columns="*,*" rows="200px, 200px, 200px" backgroundColor="lightgray" width="100%" height="100%" >
        <StackLayout tap="onNewSpendingTap" class="home-option" col="0" row="0" width="48%" orientation="vertical" backgroundColor="#ADFF2F">
            <Label class="home-button-label"  width="100%" height="100px" text="{{ newSpending }}" />
            <Image src="res://money" width="100%" height="auto" stretch="aspectFill " class="img-menu"></Image>
        </StackLayout>
        <StackLayout tap="onStatisticsTap" class="home-option" col="1" row="0" width="48%" orientation="vertical" backgroundColor="#ADFF2F">
            <Label class="home-button-label" width="100%" height="100px" text="{{ statistics }}"/>
            <Image src="res://money" width="100%" height="auto" stretch="aspectFill " class="img-menu"></Image>
        </StackLayout>
        <StackLayout class="home-option" col="0" row="1" width="48%" orientation="vertical" backgroundColor="#ADFF2F">
            <Label class="home-button-label"  width="100%" height="100px" text="{{ alerts }}" />
            <Image src="res://money" width="100%" height="auto" stretch="aspectFill " class="img-menu"></Image>
        </StackLayout>
        <StackLayout  tap="onNewLabelsTap" class="home-option" col="1" row="1" width="48%" orientation="vertical" backgroundColor="#ADFF2F">
            <Label class="home-button-label" width="100%" height="100px" text="{{ labels }}"/>
            <Image src="res://money" width="100%" height="auto" stretch="aspectFill " class="img-menu"></Image>
        </StackLayout>
        <StackLayout tap="onDeletesTap" class="home-option" col="0" row="2" width="48%" orientation="vertical" backgroundColor="#ADFF2F">
            <Label class="home-button-label" width="100%" height="100px" text="{{ delete }}"/>
            <Image src="res://money" width="100%" height="auto" stretch="aspectFill " class="img-menu"></Image>
        </StackLayout>
        <StackLayout class="home-option" col="1" row="2" width="48%" orientation="vertical" backgroundColor="#ADFF2F">
            <Label class="home-button-label" width="100%" height="100px" text="{{ credits }}"/>
            <Image src="res://money" width="100%" height="auto" stretch="aspectFill " class="img-menu"></Image>
        </StackLayout>
    </GridLayout>
</Page>
